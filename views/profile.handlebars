<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new song!</h3>

    <form class="form new-song-rating">
      <div class="form-group">
        <label for="song-name"> Song Name:</label>
        <input class="form-input" type="text" id="song-name" name="song-name" />
      </div>
       <div class="form-group">
        <label for="artist">Artist:</label>
        <input class="form-input" type="text" id="artist" name="artist" />
      </div>
      <div class="form-group">
        <label for="song-rating">Song Rating:</label>
        <input class="form-input" type="number" id="song-rating" name="song-rating" />
      </div>
      <div class="form-group">
        <label for="song-desc">Description:</label>
        <textarea class="form-input" id="song-desc" name="song-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if songs.length}}
  <div class="col-md-6 project-list">
    <h3>Reviewed Songs:</h3>

    {{#each songs as |song|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/song/{{song.id}}">{{song.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
