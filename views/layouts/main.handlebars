<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Rating App</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">

  <script src="http://code.jquery.com/jquery-1.11.3.min.js" charset="utf-8"></script>
  <script src="/js/rater.js" charset="utf-8"></script>
  <script>
        $(() => {
            var options = {
                max_value: 10,
                step_size: 0.5,
                selected_symbol_type: 'hearts',
                initial_value: 3,
                update_input_field_name: $("#input2"),
                change_once: false,
                readonly: false,
            }
            var choices = {
                max_value: 10,
                step_size: 0.5,
                selected_symbol_type: 'hearts',
                initial_value: 3,
                update_input_field_name: $("#input2"),
                change_once: false,
                readonly: true,
            }

            $(".rate").rate();


            $(".rate2").rate(options);

            $(".rate3").rate(choices);

            $(".rate2").on("change", function(ev, data){
                console.log(data.from, data.to);
            });

            $(".rate2").on("updateError", function(ev, jxhr, msg, err){
                console.log("This is a custom error event");
            });

            $(".rate2").rate("setAdditionalData", {id: 42});
            $(".rate2").on("updateSuccess", function(ev, data){

                console.log('success');
            });
        });
    </script>
    <style>
        body
        {
            font-size: 35px;
            font-family: sans-serif;
        }
        .rate-base-layer
        {
            color: #aaa;
        }
        .rate-hover-layer
        {
            color: orange;
        }
        .rate2
        {
            font-size: 35px;
        }
        .rate2 .rate-hover-layer
        {
            color: pink;
        }
        .rate2 .rate-select-layer
        {
            color: red;
        }
        hr
        {
            border: 1px solid #ccc;
        }
        p
        {
            font-size: 15px;
        }
    </style>
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <!--removed link from title-->
      <h1>Music Rating App</h1>
      <nav>
        <!--added home button-->
        <a href="/" class ="homepage">home</a>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">profile</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>